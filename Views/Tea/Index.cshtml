@{
    ViewData["Title"] = "Tea Page";
    int counter = 1;
}

<div class="row">
    <div class="col-8">
        <table class="table table-hover">
            <thead>
                <th>No</th>
                <th>Name</th>
                <th>Description</th>
                <th>#</th>
            </thead>

            <tbody>
                @foreach(var str in ViewBag.Teas)
                {
                    <td>@counter</td>
                    <td>@Html.Raw(str.Name)</td>
                    <td>@Html.Raw(str.Description)</td>
                    <td>
                        <button class="btn btn-sm mb-2 btn-primary">Edit</button>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </td>
                    counter++;
                }
            </tbody>
        </table>
        
    </div>
    
